{{>fragments/header}}
<body>
    <div class="container">
        <h3>로그인</h3>
        <form action="/login" method="post">
            <div class="form-group">
                <label for="recipient-name" class="col-form-label">이메일</label>
                <input type="text" class="form-control" id="email" name="email" placeholder="이메일">
                <small id="nameHelp" class="form-text text-muted">가입할 때 사용한 이메일을 입력해주세요</small>
            </div>
            <div class="form-group">
                <label for="recipient-name" class="col-form-label">비밀번호</label>
                <input type="password" class="form-control" id="password" name="password" minlength="8" maxlength="50">
                <small id="nameHelp" class="form-text text-muted">비밀번호가 기억나지 않는다면 <a href="#">비밀번호 찾기</a></small>
            </div>
            <div>
                    <!--id="btn-login" -->
                <button type="submit" class="btn btn-primary">로그인</button>
            </div>
        </form>
    </div>

{{>fragments/script}}
</body>
